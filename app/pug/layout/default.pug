			.m-menu-header
				.m-menu-header__top
					.lang
						a(href="#").lang__link.lang__link--active рус
						span.lang-sep /
						a(href="#").lang__link en
					.btn-m-menu
						span.btn-m-menu__dot
				a(href="#").m-menu-header__call
					span.m-menu-phone тел.
					span.m-menu-phone__number +7 927 300 9216
			nav.m-menu-nav
				a(href="#").m-menu-nav__link Студия
