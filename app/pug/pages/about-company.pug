extends ../layout/default.pug

block append vars
    - var headerMenu = 0
    - var title = 'О компании'

block header-content
    .header-content
        .person-slide.swiper-container
            .swiper-wrapper
                - for (var i = 0; i <= 3; i++)
                    .person-slide-item.swiper-slide(style="background-image: url(../img/img-bg-photo.jpg)")
                        .container.person-container
                            .person-intro
                                .person-des
                                    h2.person-des__title  Рустам Ахмадуллин
                                    span.person-des__position Арт-директор
                                    .person-des__text
                                        p «Мы стараемся сделать процесс работы максимально эффективным и приятным для всех участников. Наши ценности и принципы позволяют нам оставаться лучшими. <br>
                                        p Мы верим в силу рукопожатия. Форма договоренности не имеет значения — мы выполняем свои обещания. Всегда.»
                                .person-stage
                                    .person-stage-item
                                        span.person-stage-item__title 8 лет
                                        span.person-stage-item__text Опыт работы
                                    .person-stage-item
                                        span.person-stage-item__title 67
                                        span.person-stage-item__text Проектов <br> выполнено
                                .call-person
                                    a(data-fancybox data-src="#consulatation-form" href="javascript:;" data-person="Рустам Ахмадуллин").call-person__btn Связаться со специалистом
            .container.person-slide-navigation
                .swiper-pagination
                .swiper-button-prev
                    svg.swiper-button-prev__icon
                        use(xlink:href="./img/sprite.svg#icon-right")
                .swiper-button-next
                    svg.swiper-button-next__icon
                        use(xlink:href="./img/sprite.svg#icon-right")



block content
    section.s-bg-white.we
        .container
            .row.s-pad
                .col-12.col-sm-12.col-md-12.col-lg-6.col-xl-6.d-flex.flex-column
                    h2.s-title Мы
                    p.we-intro Каждый разработанный нами продукт не только решает задачи бизнеса и целевой аудитории.
                    .row
                        - for (var i = 0; i <= 7; i++)
                            .col-4.col-sm-3.col-md-3.col-lg-3.col-xl-3
                                .team-human-item
                                    .team-human-img
                                        img(src="./img/Rustam.jpg", alt="").team-human-img__photo
                                    .team-human-des
                                        span.team-human-des__firstname Рустам
                                        span.team-human-des__lastname Абдулин
                                        span.team-human-des__position Арт-директор

        .we-video(style="background-image: url(./img/we-time.jpg)")
            a(href="#").we-video-play
                svg.we-video-play__icon
                    use(xlink:href="./img/sprite.svg#icon-play")
            .we-video-timeline
                .we-video-timeline__title Кратко о нас
                .we-video-timeline__rec 2:00

